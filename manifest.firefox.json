{
  "manifest_version": 2,
  "name": "AI Resume Extension",
  "version": "0.1.0",
  "description": "Basic extension boilerplate with background, popup, and content script wiring.",
  "browser_action": {
    "default_title": "AI Resume Extension",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "ai-resume-extension@example.com"
    }
  }
}
